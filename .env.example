# SafeChat Sentinel Environment Configuration
# Copy this to .env and fill in your API keys

# Server Configuration
PORT=3000
NODE_ENV=development

# VirusTotal API Key
# Get your key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# AbuseIPDB API Key
# Get your key from: https://www.abuseipdb.com/api
ABUSEIPDB_API_KEY=

# Database Configuration (for future MongoDB integration)
MONGODB_URI=
DB_NAME=safechat_sentinel

# Feature Flags
ENABLE_URL_ANALYSIS=true
ENABLE_IP_ANALYSIS=true
ENABLE_THREAT_LOGGING=true
ENABLE_FAMILY_ALERTS=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/safechat.log
